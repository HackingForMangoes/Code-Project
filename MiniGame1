import random
numberOfPlayers = int(input('Enter the amount of players:'))
startingMoney = int(input('input a number for starting points:'))
foldValue = int(input('input the fold value:'))
if numberOfPlayers == 1:
    score1 = startingMoney
if numberOfPlayers == 2:
    score1 = startingMoney
    score2 = startingMoney
if numberOfPlayers == 3:
    score1 = startingMoney
    score2 = startingMoney
    score3 = startingMoney
if numberOfPlayers == 4:
    score1 = startingMoney
